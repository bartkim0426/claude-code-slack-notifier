# Claude Slack Notifier Configuration
# Copy this file to ~/.claude-slack-notifier/config and update with your values

# Slack Webhook URL
# Get this from: https://api.slack.com/apps -> Your App -> Incoming Webhooks
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/WEBHOOK/URL"

# Optional: Enable/disable notifications
NOTIFY_PERMISSIONS=true
NOTIFY_COMPLETION=true
NOTIFY_IDLE=false

# Optional: Debug mode
DEBUG_MODE=false